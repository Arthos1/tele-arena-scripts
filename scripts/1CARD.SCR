Procedure MonTest    
   Put
   Waitfor "dragon","troll","cyclops","gargoyle","lord","minotaur","lion","giant","ogre","chimera","warlock",1
   Switch Found
     Case 0: if mover=1
               movetest
             endif
     Case 1: DragonAttack
             healthcheck
             soulcheck
             MonTest
     Case 2: Attack "Troll"
             healthcheck
             soulcheck
             MonTest
     Case 3: Attack "Cyclops"
             healthcheck
             soulcheck
             MonTest
     Case 4: Attack "Gargoyle"
             healthcheck
             soulcheck
             MonTest
     Case 5: Attack "Lord"
             healthcheck
             soulcheck      
             MonTest
     Case 6: Attack "Minotaur"
             healthcheck
             soulcheck      
             MonTest
     Case 7: Attack "Lion"
             healthcheck
             soulcheck
             MonTest
     Case 8: Attack "Giant"
             healthcheck
             soulcheck   
             MonTest
     Case 9: Attack "Ogre"
             healthcheck
             soulcheck   
             MonTest
     Case 10: Attack "Chimera"
              healthcheck
              soulcheck  
              MonTest
     Case 11: Attack "Warlock"
              healthcheck
              soulcheck  
              MonTest   

     Otherwise: if mover=1
                  movetest
                endif
   EndSwitch
EndProc
;---------------------------------------------------------------------
Procedure Move String Dir, Place
  Integer OK, Xit
    mover=0
    xit = 0   
    gimp=0
    ok = 0            
    delay 10
    Repeat            
      Put Dir
         gimp=gimp+1
        Waitfor Place, "fall!","no exit",
          Switch Found
            Case 1 :gimp=0 
                     OK = 1
            Case 2 : delay 10
                     OK = 0
            Case 3 : Xit = 1
          EndSwitch
          If Xit = 1
            GetOut "You're Lost! <Hanging Up>"
          EndIf
     if gimp=10 
      hangup
      stop 
     endif
    until OK = 1
   soulcheck    
   montest
endProc

