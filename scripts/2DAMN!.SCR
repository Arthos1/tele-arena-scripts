Procedure Healthcheck
     ohoh
        Integer getit,vit
        String vital,endvital
        vital="none"
        endvital="none"
        position=0
        getit=0
        vit=0
          Put "He"
          Waitfor "vitality:",3 ;RENT MANA PUT HERE
          If Found
          getn vital,9
strdel vital, 1,5                 
         ; strpos vital,"/",position
         ; getit=(position-5)
          substr vital,1,3,endvital
          atoi endvital,vit
          print "Health is: ", vit
          if vit <= 430 and vit >= 400
                 kamotu          
          elseif vit < 399 and vit > 100
             gimotu                     
          elseif vit < 99 and vit > 50
          put "drink anemone"
          getout "low health"
          elseif vit <= 0                
            Print "Bad Healthcheck!"     
          EndIf
        EndIf
                               
EndProc
