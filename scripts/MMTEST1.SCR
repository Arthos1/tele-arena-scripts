procedure checkmana
integer end, curman, maxman, end2
string mana1, mana2, working
        getstats
working=manahpstr
        strdel working,1,29
        strpos working, "/",end
        substr working, 1,end-1,mana1
        strpos working, "  [",end2
        strpos working,"/",end2
        substr working,end2+1,end-1,mana2
        atoi mana1,curman
        atoi mana2,maxman
        put "br ",curman," out of ",maxman," mana"
      return       
endproc            

