procedure move
  substr path,room,1,mover
     switch mover 
        case "n","s","e","w","u","d": forward=mover
        case "1": forward="nw"
        case "2": forward="ne"
        case "3": forward="sw"
        case "4": forward="se"
        case "l": forward="l"
        case "z": forward="z"
        case "a": forward="a"            
        case "h": forward=""
                  chkbls
        case "m": foward=""
                  stash
                  
        endswitch
   if attacked = 1
     runner
   elseif forward="l"
     xpstyle=2
     chkexp        
     room=room+1
   elseif forward="a"
     newloop
     room=room+1
   elseif forward="z"
     print "Insert counter thingy here and all that jazz"
     room=1
     return   
   else
     if needrest = 0
     sneak
     endif
     put forward 
     mobtest
     if fought=1
      getstats
      health
      if needrest=0
      mana
      endif
      room=room+1
      fought=0
     else
     room=room+1
    endif
   endif
endproc
