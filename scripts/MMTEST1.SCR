procedure health
;th:    99/99    [100%]  Mana:  58/58  [100%]
string loche
loche=manahpstr
        strpos loche,"[",pos
        Substr loche, pos+1, 3,health1
        if health1 = "100"
        return
        else
        health2=health1
        concat health2,"^H"
        atoi health2,health3
        if health3 < 80
        put "-Low on hp (",health2,"%)"
        rester
        else 
        return
        endif
        endif
endproc
