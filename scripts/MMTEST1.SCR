procedure newloop
integer doit
time current
difftime start,current,doit
minutes=doit/60
put "-",iter," loops so far in ",minutes,"."
put "-I have killed ",moba-iter," ",mona,"'s ",mobb," ",monb,"'s ",mobc," ",monc,"'s, and last but not least ",mobd," ",mond,"'s."
delay 30
put
iter=iter+1
put "prev"
return
endproc
