procedure mana
;th:    99/99    [100%]  Mana:  58/58  [100%]
;Mana:  58/58  [100%]
string locma
locma=manahpstr
        strdel locma,1,25
        strpos locma,"[",pos
        Substr locma, pos+1, 3,mana1
        if mana1 = "100"
        return
        else
        mana2=mana1
        concat mana2,"^H"
        atoi mana2,mana3
        if mana3 < 01
        put "-Mana at ",mana2,"%  Now resting"
        put "rest" 
        waitfor ft,sp,mta,yf,ay,150
        switch found
           case 1,4,5: return
           case 2,3: attacked=1
                     return
        endswitch
        return
        else 
        return
        endif
        endif
return
endproc     
