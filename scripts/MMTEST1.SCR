procedure cure                                                         
put "cure"
   waitfor "you cast","but fail","enough mana",8
    switch found
        case 1: put "rest"
                return
        case 2: delay 50
                cure
                return
        case 3: put "sigh"
                delay 30
                cure
    endswitch
endproc
;----------------------------------------------------------------------
procedure rester
string health1
 put "rest"
needrest=1
   waitfor "(resting)","too sick",8
     switch found
        case 1: put "smile"
        case 2: cure
     endswitch
    repeat
     waitfor ft,sp,mta,yf,ay,15
        switch found
           case 1,4,5: return
           case 2,3: attacked=1
                     return
           endswitch
       getstats
        Substr manahpstr, 18, 3,health1
    until health1="100"
  needrest=0
 return
endproc
